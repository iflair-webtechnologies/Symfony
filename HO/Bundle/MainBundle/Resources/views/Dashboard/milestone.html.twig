{% extends '::dashboard.html.twig' %}
{% block title %}{{ milestone.title }}{% endblock %}

{% block header %}
    {% render(controller('MainBundle:Partial:header', { request : app.request, title : ", accountmanager: " ~ project.accountmanager })) %}
{% endblock %}

{% block categories %}{% endblock %}

{% block body %}
    <div id="MilestoneContent" class="taskList greyBG selT">
        <div class="milestoneWrap">
            <div class="selT milestone msUpcoming hs" style="position:relative;border-bottom:none;margin:0 10px;min-height:75px;min-height:90px;">

                <div class="msDaysAway"><strong>{{ milestone.away }} dagen resterend</strong></div>

                {% set deadline = milestone.deadline|slice(0,4) ~ "/" ~ milestone.deadline|slice(4,2) ~ "/" ~ milestone.deadline|slice(6,2) %}

                <div class="msIcon">
                    <div class="msIconHdr">{{ deadline|date('F') }}</div>
                    <div class="msIconBody">
                        <div class="msIconBodyTxt">{{ deadline|date('d') }}</div>
                        <div class="msIconDueWeekday"><span>{{ milestone.deadline|date_modify("-1 day")|date('l') }}</span></div>
                    </div>
                </div>
                <div class="msName"  style="padding: 5px 0 0 24px;">
                    <a class="msName ql" href="#">{{ milestone.title }}</a>
                </div>
                <div style="padding:5px 0 0 30px;">
                    {% if milestone.resposiblePartyNames %}
                        <div class="msResponsibleParties">
                            <span class="tipped" style="font-weight:normal;">
                                {{ milestone.resposiblePartyNames }} verantwoordelijk
                            </span>
                        </div>
                    {% endif %}
                    <div class="msDescription">
                        {% if milestone.description %}
                            {{ milestone.description }}
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </div>
                </div>
                <div style="display:block;margin:0;padding:10px 0 5px 30px;min-height:30px;" class="milestoneTools compact"></div>
            </div>
        </div>
        <div id="milestoneTools_94886">&nbsp;</div>
    </div>
{% endblock %}